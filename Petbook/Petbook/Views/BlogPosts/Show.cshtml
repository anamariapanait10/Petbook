@model Petbook.Models.BlogPost

<div class="container mt-3">
    @Html.Partial("BlogPostInfo", Model)
    <br />
    @Html.Partial("BlogPostTags", Model)


    @if (Model.UserId == ViewBag.CurrentUser)
    {
        <form method="post" action="/BlogPosts/Delete/@Model.BlogPostId">

            <button class="btn btn-danger" style="float:right; line-height:1;" type="submit">Delete</button>

        </form>
    }

    <a class="btn btn-secondary" href="/BlogPosts/Index" style="width:100px; margin-right:5px;">View all</a>
</div>

