@model Petbook.Models.BlogPost

<style>
    .blog-post-title {
        text-align: center;
        padding: auto;
        font-size: 20px;
        background-color: white;
        width: 1100px;
        height: 30px;
        margin: 10px auto;
    }
</style>

<div class="card-body">
    <h3 class="blog-post-title">@Model.BlogPostTitle</h3>
    <div class="card-text">@Html.Raw(Model.BlogPostContent)</div>
    <div class="d-flex justify-content-between flex-column mt-5 mx-4">
        <div> <i class="bi bi-hand-thumbs-up"></i>@Model.BlogPostLikes.Count Likes</div>
        <br />
    </div>
</div>
