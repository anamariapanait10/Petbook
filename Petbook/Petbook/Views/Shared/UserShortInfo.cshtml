@model ApplicationUser

<div class="card-body">
	<div style="float:left; width:40%;"><img src="@Model.ProfilePhoto" style="width:90%; margin-right:10px" /></div>
	<div style="float:left; font-size:12px; width:60%">
		<span style="font-size:20px">@Model.UserName</span><br /><br />
		Joined at @Model.JoinDate<br />
		Phone: @Model.PhoneNumber
		<a href="mailto: @Model.Email"><i class="bi bi-envelope" style="cursor:pointer; color:black;"></i></a>
	</div>
	<div style="clear:both;"></div>
</div>
